# IML Exam-Optimized Configuration
# Source this before running Lectern for IML lectures:
#   source .env.iml && python main.py ...

# Enable exam preparation mode - prioritizes comparison/application cards
EXAM_MODE=true

# IML slides are dense (60-70 slides), need more cards per slide
CARDS_PER_SLIDE_TARGET=2.0

# Ensure minimum coverage of material
MIN_CARDS_PER_SLIDE=1.2

# More reflection rounds for quality
REFLECTION_MAX_ROUNDS=3

# Better reasoning for mathematical/conceptual content
GEMINI_THINKING_LEVEL=medium

# Keep batches manageable
MAX_NOTES_PER_BATCH=25

